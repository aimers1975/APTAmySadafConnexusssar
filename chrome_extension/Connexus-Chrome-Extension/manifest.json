{
    "manifest_version": 2,
    "name": "Connexus Chrome Extension",
    "description": "Upload to Connexus Stream",
    "version": "1",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "downloads",
        "contextMenus",
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}